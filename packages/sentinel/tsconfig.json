{
	"extends": "../../tsconfig.base.json",
	"include": [
		"core/**/*",
		"**/__test__/**/*",
		"**/*.d.ts",
		"**/*.ts",
		"store",
		"env"
	],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"outDir": "./dist",
		"noEmit": false,
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["ES2020", "DOM", "ES2015"]
	},
	"lib": ["es2015"],
	"types": ["jest"]
}
