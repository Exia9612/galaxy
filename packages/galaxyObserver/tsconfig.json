{
	"extends": "../../tsconfig.base.json",
	"include": ["src/**/*", "__test__/**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["ES2020", "DOM", "ES2015"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./",
		"noImplicitAny": false,
		"types": ["jest"]
	}
}
